{
  "name": "chess",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "clean": "node -e \"fs.rmSync('dist', {recursive: true, force: true})\"",
    "prebuild": "npm run clean",
    "build": "npm run copy:public && npm run build:client && npm run build:server",
    "build:client": "esbuild src/client/index.tsx --bundle --outdir=dist/client --target=es2022 --loader:.gltf=file --loader:.png=file --loader:.webp=file --format=esm --sourcemap",
    "build:server": "esbuild src/server/index.ts --bundle --outdir=dist/server --packages=external --platform=node --minify --format=esm",
    "watch:client": "npm run build:client -- --watch",
    "watch:server": "npm run build:server -- --watch",
    "nodemon:server": "nodemon dist/server/index.js",
    "prestart": "npm run build",
    "start": "concurrently --names client,server,nodemon -c auto --kill-others \"npm:watch:client\" \"npm:watch:server\" \"npm:nodemon:server\"",
    "copy:public": "node -e \"fs.cpSync('public', 'dist/client', {recursive: true})\"",
    "typecheck": "tsc --noEmit"
  },
  "browserslist": [
    "last 1 Chrome version"
  ],
  "author": "Eliya Vahl",
  "license": "ISC",
  "dependencies": {
    "babylonjs": "^5.13.3",
    "babylonjs-loaders": "^5.13.3",
    "compression": "^1.7.4",
    "express": "^4.18.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "concurrently": "^8.2.2",
    "dotenv": "^16.0.1",
    "esbuild": "^0.21.5",
    "typescript": "^4.7.4"
  }
}
