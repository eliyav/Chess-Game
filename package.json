{
  "name": "chess-game",
  "version": "1.3.7",
  "description": "3D Chess Game",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "clean": "node -e \"fs.rmSync('dist', {recursive: true, force: true})\"",
    "start": "npm run build && concurrently --names esbuild,nodemon,tailwind -c auto --kill-others npm:build:watch npm:nodemon:server npm:tailwind:watch",
    "typecheck": "tsc --noEmit",
    "test": "glob -c \"node --import tsx --test\" \"src/tests/**/*.test.ts\"",
    "build": "node esbuild.config.js && npm run tailwind && npm run worker:game",
    "build:watch": "node esbuild.config.js -- -w -spb",
    "build:prod": "node esbuild.config.js -- -p && npm run tailwind && npm run worker:game",
    "nodemon:server": "nodemon dist/server/index.js",
    "tailwind": "tailwindcss -i ./src/client/index.css -o ./dist/client/tailwind-output.css",
    "tailwind:watch": "tailwindcss -i ./src/client/index.css -o ./dist/client/tailwind-output.css --watch",
    "worker:game": "esbuild src/client/game-logic/game.ts --bundle --outfile=public/game-logic.js && node scripts/build-game-logic.js"
  },
  "browserslist": [
    "last 1 Chrome version"
  ],
  "author": "Eliya Vahl",
  "license": "ISC",
  "dependencies": {
    "@babylonjs/core": "^7.40.2",
    "@babylonjs/loaders": "^7.40.2",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.0.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@babylonjs/inspector": "^7.40.2",
    "@types/compression": "^1.7.5",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "glob": "^11.0.0",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
