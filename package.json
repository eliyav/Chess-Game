{
  "name": "chess-game",
  "version": "1.2.1",
  "description": "3D Chess Game",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "clean": "node -e \"fs.rmSync('dist', {recursive: true, force: true})\"",
    "start": "npm run build && concurrently --names esbuild,nodemon,tailwind -c auto --kill-others npm:watch:skipPrebuild npm:nodemon:server npm:tailwind:watch",
    "typecheck": "tsc --noEmit",
    "test": "glob -c \"node --import tsx --test\" \"src/tests/**/*.test.ts\"",
    "prebuild": "npx tailwindcss -i ./src/client/index.css -o ./dist/client/tailwind-output.css",
    "tailwind:watch": "npx tailwindcss -i ./src/client/index.css -o ./dist/client/tailwind-output.css --watch",
    "build": "node esbuild.config.js",
    "watch": "npm run build -- -w",
    "watch:skipPrebuild": "npm run watch -- -spb",
    "build:prod": "npm run build -- -p",
    "nodemon:server": "nodemon dist/server/index.js"
  },
  "browserslist": [
    "last 1 Chrome version"
  ],
  "author": "Eliya Vahl",
  "license": "ISC",
  "dependencies": {
    "@babylonjs/core": "^7.40.2",
    "@babylonjs/loaders": "^7.29.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0",
    "socket.io": "^4.8.0",
    "socket.io-client": "^4.8.0"
  },
  "devDependencies": {
    "@babylonjs/inspector": "^7.29.0",
    "@types/compression": "^1.7.5",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "concurrently": "^9.0.1",
    "esbuild": "^0.24.0",
    "glob": "^11.0.0",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
