{
  "name": "chess-game",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "node -e \"fs.rmSync('dist', {recursive: true, force: true})\"",
    "prebuild": "npm run clean",
    "build": "npm run copy:public && npm run build:client && npm run build:server",
    "build:client": "esbuild src/client.tsx --bundle --outdir=dist/client --target=es2022 --minify",
    "build:server": "esbuild src/server.ts --bundle --outdir=dist/server --packages=external --platform=node --minify --format=esm",
    "watch:client": "npm run build:client -- --watch",
    "watch:server": "npm run build:server -- --watch",
    "nodemon:server": "nodemon ./dist/server/server.js",
    "prestart": "npm run build",
    "start": "concurrently --names client,server,nodemon -c auto --kill-others \"npm:watch:client\" \"npm:watch:server\" \"npm:nodemon:server\"",
    "copy:public": "node -e \"fs.cpSync('public', 'dist/client', {recursive: true})\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "Eliya Vahl",
  "license": "MIT",
  "description": "3D Chess Game",
  "dependencies": {
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.2",
    "nodemon": "^3.1.0",
    "typescript": "~5.4.5"
  },
  "prettier": {}
}
